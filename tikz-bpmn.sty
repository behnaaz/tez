\newcommand{\bpmntaskalaki@noarrow}[3]{%	
\node (rt@p1) at #1 {} ;
\node (rt@p2) at #2 {} ;

\rt@midpoints{0.25}{0.75}{rt@p1}{rt@p2}

\draw[thin] #1 to (\rt@xa,\rt@ya);
\draw decorate [decoration=zigzag] {(\rt@xa,\rt@ya) -- #3 (\rt@xb,\rt@yb)};
\draw[thin] (\rt@xb,\rt@yb) to #2;

}


